<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_task_name"
        android:layout_weight="7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="18sp"
        android:text="" />

    <TextView
        android:id="@+id/text_task_period"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="18sp"
        android:text="" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button_play"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_baseline_play_arrow_48"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:minWidth="0dp"
            android:minHeight="0dp" />

        <ImageButton
            android:id="@+id/button_goal"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_baseline_flag_48"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:minWidth="0dp"
            android:minHeight="0dp"  />

        <ImageButton
            android:id="@+id/button_pause"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_baseline_pause_48"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/button_abandon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_baseline_stop_48"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:minWidth="0dp"
            android:minHeight="0dp" />

        <ImageView
            android:id="@+id/image_finished"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_baseline_check_48"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/image_abandoned"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_baseline_close_48"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
