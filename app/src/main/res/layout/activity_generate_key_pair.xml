<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dip">

    <TextView
        android:id="@+id/id_text_pow_hint"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/border_red"
        android:lines="10"
        android:paddingLeft="5dip"
        android:paddingTop="5dip"
        android:paddingRight="5dip"
        android:paddingBottom="5dip"
        android:text="@string/HINT_GLID_POW" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_text_pow_tip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:text="PoW" />

        <SeekBar
            android:id="@+id/id_seek_pow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="8dip"
            android:paddingBottom="8dip" />

        <TextView
            android:id="@+id/id_text_current_pow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:text=" 8" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_button_generate_glid"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="@string/BUTTON_GENERATE_GLID" />

        <Button
            android:id="@+id/id_button_cancel_generate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/BUTTON_STOP" />

    </LinearLayout>

    <TextView
        android:id="@+id/id_text_output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_red"
        android:lines="15"
        android:paddingLeft="5dip"
        android:paddingTop="5dip"
        android:paddingRight="5dip"
        android:paddingBottom="5dip"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/id_text_view_spliter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_text_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9" />

        <Button
            android:id="@+id/id_button_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/BUTTON_ACCEPT_GLID" />
    </LinearLayout>

</LinearLayout>