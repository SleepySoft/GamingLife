<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_text_private_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Private Key" />

        <EditText
            android:id="@+id/id_plain_text_private_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:ems="10"
            android:inputType="text"
            android:text="Private Key Area" />

        <TextView
            android:id="@+id/id_text_public_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Public Key" />

        <EditText
            android:id="@+id/id_plain_text_public_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:ems="10"
            android:inputType="text"
            android:text="Public Key Area" />

        <TextView
            android:id="@+id/id_text_glid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GamingLife ID" />

        <TextView
            android:id="@+id/id_plain_text_glid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GamingLife ID Area" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="创建GLID" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="导入GLID" />

        </com.google.android.material.tabs.TabLayout>
    </LinearLayout>

</LinearLayout>